set clipboard=unnamed  " Yanks go on clipboard instead.
set incsearch " incremental searching on
set nohlsearch " highlight all matches
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set expandtab
set tabstop=4

inoremap fd <Esc>
vnoremap fd <Esc>

noremap <c-o> :vsc View.NavigateBackward<cr>
noremap <c-i> :vsc View.NavigateForward<cr>
nnoremap <c-]> :vsc Edit.GoToDefinition<cr>
nnoremap gt :vsc Window.NextDocumentWindow<cr>
nnoremap <c-w>o :vsc Window.ActivateDocumentWindow<cr>
nnoremap gT :vsc Window.PreviousDocumentWindow<cr>

let mapleader = "\<Space>"
noremap gcc :vsc Edit.CommentSelection<cr>
noremap gcu :vsc Edit.UncommentSelection<cr>
nnoremap <leader>/ :vsc Edit.FindinFiles<cr>
nnoremap <leader>ep :vsc View.PreviousError<CR>
nnoremap <leader>en :vsc View.NextError<CR>
nnoremap <leader>ee :vsc View.ErrorList<CR>
nnoremap <leader>sc :nohlsearch<cr><esc>
nnoremap <c-p> :vsc Edit.GotoFile<CR>
nnoremap <leader>r :vsc Edit.FindAllReferences<cr>
nnoremap <leader>= :vsc Edit.FormatDocument<cr>
nnoremap <leader>t :vsc View.SolutionExplorer<cr>

